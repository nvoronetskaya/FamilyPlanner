<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_name"
        style="@style/commentName"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="Вы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sent_at"
        style="@style/commentTime"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="24.01.2024 19:37"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_comment"
        app:layout_constraintEnd_toStartOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/commentText"
        android:layout_width="wrap_content"
        android:text="Важный комментарий"
        app:layout_constraintEnd_toEndOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_files"
        style="@style/textBody"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        tools:listitem="@layout/viewholder_file"
        app:layout_constraintEnd_toEndOf="@id/tv_comment"
        app:layout_constraintTop_toBottomOf="@id/tv_comment" />
</androidx.constraintlayout.widget.ConstraintLayout>